@model ShowtimeWebApplication.Models.BookingEditViewModel

@{
    ViewData["Title"] = "Edit Booking";
}

<h1>Edit Booking</h1>

<h4>Booking</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label class="control-label">User</label>
                <input class="form-control" value="@Model.UserFullName" readonly />
            </div>

            <div class="form-group">
                <label class="control-label">Booking Date</label>
                <input class="form-control" value="@Model.BookingDate.ToString("MMM dd, yyyy h:mm tt")" readonly />
            </div>

            <div class="form-group">
                <label class="control-label">Original Movie & Showtime</label>
                <input class="form-control" value="@Model.MovieTitle - @Model.Showtime.ToString("MMM dd, yyyy h:mm tt")" readonly />
            </div>

            <div class="form-group">
                <label asp-for="NumberOfTickets" class="control-label">Number of Tickets</label>
                <input asp-for="NumberOfTickets" class="form-control" />
                <span asp-validation-for="NumberOfTickets" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ShowtimeId" class="control-label">Change Showtime</label>
                <select asp-for="ShowtimeId" class="form-control" asp-items="ViewBag.ShowtimeId">
                    <option value="">-- Select New Showtime --</option>
                </select>
                <span asp-validation-for="ShowtimeId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}