@model IEnumerable<ShowtimeWebApplication.Models.Movie>
@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService


@{
    ViewData["Title"] = "Movies";
}

<!--Search box-->
<form asp-action="Index" method="get" class="form-inline mb-3">
    <div class="form-group">
        <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control mr-2" placeholder="Search by title or genre" />
    </div>
    <button type="submit" class="btn btn btn-outline-primary">Search</button>
    <a asp-action="Index" class="btn btn btn-outline-primary ml-2">Reset</a>
</form>
<!--Filter box-->
<form method="get" class="mb-3">
    <div class="form-group">
        <select name="genreFilter" class="form-control">
            <option value="">All Genres</option>
            @foreach (var genre in Enum.GetValues(typeof(ShowtimeWebApplication.Models.Genre)))
            {
                <option value="@genre">@genre</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-outline-primary">Filter</button>
    <a href="@Url.Action("Index")" class="btn btn-outline-primary">Reset</a>
</form>
<!--Sort box-->
<div class="mb-3">
    <a href="@Url.Action("Index", new { sortOrder = "", searchString = ViewData["CurrentFilter"], genreFilter = ViewData["GenreFilter"] })" 
       class="btn btn-outline-primary">A-Z</a>
    <a href="@Url.Action("Index", new { sortOrder = "title_desc", searchString = ViewData["CurrentFilter"], genreFilter = ViewData["GenreFilter"] })" 
       class="btn btn-outline-primary">Z-A</a>
</div>
<!--Movie functions-->
@if(User.IsInRole("Admin")){
<p>
    <a asp-action="Create" class="btn btn-primary">Create New Movie</a>
</p>
}

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Genre</th>
            <th>Duration</th>
            <th>Showtimes</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Genre</td>
                <td>@item.Duration minutes</td>
                <td>
                    @if (item.Showtimes?.Any() == true)
                    {
                        foreach (var showtime in item.Showtimes)
                        {
                            <div>StartTime:@showtime.StartTime.ToString("MMM dd, yyyy h:mm tt")</div>
                            <div>Price: $@showtime.Price</div>
                        }
                    }
                    else
                    {
                        <span>No showtimes</span>
                    }
                </td>
                <td>
                    @if(User.IsInRole("Admin")){
                    
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>            
                        <span> | </span>
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        <span> | </span>
                    }
                                          
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                    @if (User.IsInRole("User"))
                    {
                        <span> | </span> <a asp-controller="Bookings" asp-action="Create" asp-route-id="@item.Id">Book</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>